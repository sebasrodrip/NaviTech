@{
    ViewData["Title"] = "Cotizaciones";
}
<div id="page-content">
    <!-- cotizaciones -->
    <h3 class="page-header">Cotizaciones </h3>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cotizarModalCenter">
        Nueva Cotización
    </button>

    <!-- Tabla de Cotizaciones existentes -->
    <table class="table table-cotizaciones">
        <thead>
            <tr>
                <th>Cliente</th>
                <th class="hidden-xs hidden-sm"><i class=""></i> Cedula</th>
                <th>Comentarios</th>
                <th>Servicios a Contratar</th>
                <th>Total</th>
                <th class="text-center"><i class="fa fa-bolt"></i>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="hidden-xs hidden-sm">user1@cotizar.com</</td>
                <td class="hidden-xs hidden-sm">111111111</td>
                <td class="hidden-xs hidden-sm">lorem ipsum</td>
                <td class="hidden-xs hidden-sm">lorem, ipsum</td>
                <td class="hidden-xs hidden-sm">3,000.000</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a href="javascript:void(0)" class="btn btn-xs btn-inverse" data-toggle="popover" data-placement="top" data-content="Content" title="Plans">
                            <i class="fa fa-angle-double-up"></i> Facturar
                        </a>
                    </div>
                    <div class="btn-group">
                        <a href="javascript:void(0)" data-toggle="modal" data-target="#cotizarModalCenter" title=" Edit" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                        <a href="javascript:void(0)" data-toggle="tooltip" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <!-- END cotizaciones -->
    <!-- Modal Cotizar-->
    <div class="modal fade" id="cotizarModalCenter" tabindex="-1" role="dialog" aria-labelledby="cotizarModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cotizarModalLongTitle">Cotizacion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="cotizacion-form" style="margin-bottom: 20px;">
                <div class="modal-body">
                    <!-- Formulario de Cotización -->
                        <div class="form-group">
                            <label for="nombre">Nombre del cliente:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" pattern="[A-Za-z\s]+" required>
                        </div>

                        <div class="form-group">
                            <label for="cedula">Cédula:</label>
                            <input type="text" class="form-control" id="cedula" name="cedula" pattern="[0-9]+" required>
                        </div>

                        <div class="form-group">
                            <label for="comentarios">Comentarios:</label>
                            <textarea class="form-control" id="comentarios" name="comentarios"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="servicios">Servicios a contratar:</label>
                            <input type="text" class="form-control" id="servicios" name="servicios">
                        </div>

                        <div class="form-group">
                            <label for="total">Total:</label>
                            <input type="text" class="form-control" id="total" name="total" pattern="[0-9]+" required>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Cotizar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!--End Modal Cotizar-->
    <!-- Modal Facturar-->
    <div class="modal fade" id="facturaModalCenter" tabindex="-1" role="dialog" aria-labelledby="facturaModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="facturaModalLongTitle">Cotizacion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="facturacion-form" style="margin-bottom: 20px;">
                    <div class="modal-body">
                        <!-- Formulario de Facturación -->
                        <div class="form-group">
                            <label for="factura-id">ID de Factura:</label>
                            <input type="text" class="form-control" id="factura-id" name="factura-id" readonly>
                        </div>

                        <div class="form-group">
                            <label for="cliente-id">ID del Cliente:</label>
                            <input type="text" class="form-control" id="cliente-id" name="cliente-id" required>
                        </div>

                        <div class="form-group">
                            <label for="nombre-negocio">Nombre del Negocio:</label>
                            <input type="text" class="form-control" id="nombre-negocio" name="nombre-negocio" required>
                        </div>

                        <div class="form-group">
                            <label for="monto">Monto:</label>
                            <input type="number" class="form-control" id="monto" name="monto" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Cotizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--End Modal Facturar-->
</div>

<script>
    document.getElementById('cotizacion-form').addEventListener('submit', function (event) {
        event.preventDefault(); 
        const nombre = document.getElementById('nombre').value;
        const cedula = document.getElementById('cedula').value;
        const comentarios = document.getElementById('comentarios').value;
        const servicios = document.getElementById('servicios').value;
        const total = document.getElementById('total').value;

        const tableBody = document.querySelector('.table-cotizaciones tbody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `<td>${nombre}</td>
                                <td class="hidden-xs hidden-sm">${cedula}</td>
                                <td>${comentarios}</td>
                                <td>${servicios}</td>
                                <td>${total}</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <a href="javascript:void(0)" class="btn btn-xs btn-inverse" data-toggle="popover" data-placement="top" data-content="Content" title="Plans">
                                                <i class="fa fa-angle-double-up"></i> Cotizar
                                            </a>
                                        </div>
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Edit" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                    </div>
                                </td>`;
        tableBody.appendChild(newRow);
        alert('Cotización generada con éxito');
    });

    function crearFactura() {
        const facturaId = generarIdUnico();
        const clienteId = document.getElementById('nombre').value;
        const nombreNegocio = document.getElementById('nombre-negocio').value;
        const monto = document.getElementById('monto').value;
        document.getElementById('factura-id').value = facturaId;
        document.getElementById('mensaje-factura').style.display = 'block';
        const tableBody = document.querySelector('.table-facturas tbody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `<td>${facturaId}</td>
                                        <td>${clienteId}</td>
                                        <td>${nombreNegocio}</td>
                                        <td>${monto}</td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a href="javascript:void(0)" data-toggle="tooltip" title="Detalles" class="btn btn-xs btn-info"><i class="fa fa-info-circle"></i></a>
                                                <a href="javascript:void(0)" data-toggle="tooltip" title="Editar" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                                <a href="javascript:void(0)" data-toggle="tooltip" title="Eliminar" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                            </div>
                                        </td>`;

        tableBody.appendChild(newRow);
    }

    function generarIdUnico() {
        return Date.now().toString();
    }
</script>
