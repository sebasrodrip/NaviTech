@{
    ViewData["Title"] = "Cotizaciones";
}
<div id="page-content">
    <!-- cotizaciones -->
    <h3 class="page-header">Cotizaciones </h3>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Nueva Cotización
    </button>

    <!-- Tabla de Cotizaciones existentes -->
    <table class="table table-cotizaciones">
        <thead>
            <tr>
                <th>Cliente</th>
                <th class="hidden-xs hidden-sm"><i class=""></i> Cedula</th>
                <th>Comentarios</th>
                <th>Servicios a Contratar</th>
                <th>Total</th>
                <th class="cell-small text-center"><i class="fa fa-bolt"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="hidden-xs hidden-sm">user1@example.com</</td>
                <td class="hidden-xs hidden-sm">111111111</td>
                <td class="hidden-xs hidden-sm">lorem ipsum</td>
                <td class="hidden-xs hidden-sm">lorem, ipsum</td>
                <td class="hidden-xs hidden-sm">3,000.000</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a href="javascript:void(0)" data-toggle="modal" title="" class="btn btn-xs btn-success" data-target="#exampleModalCenter" data-original-title="Edit"><i class="fa fa-pencil"></i></a>
                        <a href="javascript:void(0)" data-toggle="tooltip" title="" class="btn btn-xs btn-danger" data-original-title="Delete"><i class="fa fa-times"></i></a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <!-- END cotizaciones -->
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Cotizacion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario de Cotización -->
                    <form id="cotizacion-form" style="margin-bottom: 20px;">
                        <div class="form-group">
                            <label for="nombre">Nombre del cliente:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" pattern="[A-Za-z\s]+" required>
                        </div>

                        <div class="form-group">
                            <label for="cedula">Cédula:</label>
                            <input type="text" class="form-control" id="cedula" name="cedula" pattern="[0-9]+" required>
                        </div>

                        <div class="form-group">
                            <label for="comentarios">Comentarios:</label>
                            <textarea class="form-control" id="comentarios" name="comentarios"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="servicios">Servicios a contratar:</label>
                            <input type="text" class="form-control" id="servicios" name="servicios">
                        </div>

                        <div class="form-group">
                            <label for="total">Total:</label>
                            <input type="text" class="form-control" id="total" name="total" pattern="[0-9]+" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Cotizar</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal-->
</div>

<script>
    document.getElementById('cotizacion-form').addEventListener('submit', function (event) {
        event.preventDefault(); 
        const nombre = document.getElementById('nombre').value;
        const cedula = document.getElementById('cedula').value;
        const comentarios = document.getElementById('comentarios').value;
        const servicios = document.getElementById('servicios').value;
        const total = document.getElementById('total').value;

        const tableBody = document.querySelector('.table-cotizaciones tbody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `<td>${nombre}</td>
                                <td class="hidden-xs hidden-sm">${cedula}</td>
                                <td>${comentarios}</td>
                                <td>${servicios}</td>
                                <td>${total}</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Details" class="btn btn-xs btn-info"><i class="fa fa-info-circle"></i></a>
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Edit" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                    </div>
                                </td>`;

        tableBody.appendChild(newRow);
        alert('Cotización generada con éxito');
    });
</script>
