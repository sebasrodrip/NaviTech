@{
    ViewData["Title"] = "Facturas";
}
<div id="page-content">
    <div id="facturacion-content">
        <!-- Facturación -->
        <h3 class="page-header">Facturación </h3>

        <!-- Formulario de Facturación -->
        <form id="facturacion-form" style="margin-bottom: 20px;">
            <div class="form-group">
                <label for="factura-id">ID de Factura:</label>
                <input type="text" class="form-control" id="factura-id" name="factura-id" readonly>
            </div>

            <div class="form-group">
                <label for="cliente-id">ID del Cliente:</label>
                <input type="text" class="form-control" id="cliente-id" name="cliente-id" required>
            </div>

            <div class="form-group">
                <label for="nombre-negocio">Nombre del Negocio:</label>
                <input type="text" class="form-control" id="nombre-negocio" name="nombre-negocio" required>
            </div>

            <div class="form-group">
                <label for="monto">Monto:</label>
                <input type="number" class="form-control" id="monto" name="monto" required>
            </div>

            <button type="button" class="btn btn-primary" onclick="crearFactura()">Crear</button>
        </form>

        <!-- Mensaje de Factura Creada -->
        <div id="mensaje-factura" class="alert alert-success" style="display:none; margin-top: 10px;">
            Factura creada
        </div>

        <!-- Tabla de Facturas existentes -->
        <table class="table table-facturas">
            <thead>
                <tr>
                    <th>ID de Factura</th>
                    <th>ID del Cliente</th>
                    <th>Nombre del Negocio</th>
                    <th>Monto</th>
                    <th class="cell-small text-center"><i class="fa fa-bolt"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <!-- END Facturación -->
    </div>

    <script>
        function crearFactura() {
            const facturaId = generarIdUnico();
            const clienteId = document.getElementById('cliente-id').value;
            const nombreNegocio = document.getElementById('nombre-negocio').value;
            const monto = document.getElementById('monto').value;
            document.getElementById('factura-id').value = facturaId;
            document.getElementById('mensaje-factura').style.display = 'block';
            const tableBody = document.querySelector('.table-facturas tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `<td>${facturaId}</td>
                                    <td>${clienteId}</td>
                                    <td>${nombreNegocio}</td>
                                    <td>${monto}</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="javascript:void(0)" data-toggle="tooltip" title="Detalles" class="btn btn-xs btn-info"><i class="fa fa-info-circle"></i></a>
                                            <a href="javascript:void(0)" data-toggle="tooltip" title="Editar" class="btn btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                            <a href="javascript:void(0)" data-toggle="tooltip" title="Eliminar" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                        </div>
                                    </td>`;

            tableBody.appendChild(newRow);
        }

        function generarIdUnico() {
            return Date.now().toString();
        }
    </script>

</div>